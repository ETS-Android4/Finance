<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuivieActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Suivie du compte "
            android:textSize="30sp" />

        <TextView
            android:id="@+id/choisie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="test"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date actuelle :"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/jours_suivie"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:hint="  jj"
                android:inputType="number"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mois_suivie"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="mm"
                android:inputType="number"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/annee_suivie"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="aaaa"
                android:inputType="number"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:clickable="true"
            android:onClick="obtenir_solde"
            android:text="Rafraîchir le solde"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/solde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SOLDE"
            android:textSize="20sp"
            android:layout_marginVertical="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opération :"
                android:textSize="20sp"/>
            <CheckBox
                android:id="@+id/versement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Versement"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/retrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Retrait"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Montant :  "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/montant"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="DT"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date d'opération :"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/jours_op"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:hint="  jj"
                android:inputType="number"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mois_op"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="mm"
                android:inputType="number"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/annee_op"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:hint="aaaa"
                android:inputType="number"
                android:textSize="18sp" />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="5dp"
            android:clickable="true"
            android:onClick="operation"
            android:text="Valider l'opération"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>