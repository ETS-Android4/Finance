<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Finance" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightGrey</item>
        <item name="colorPrimaryVariant">@color/lightRed</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">#222222</item>
        <item name="android:colorButtonNormal">@color/lightRed</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorTertiary">#C1BDBD</item>
        <item name="android:textColorSecondary">@color/lightGrey</item>
        <item name="android:textColorHint">@color/lightRed</item>
        <item name="android:editTextColor">@color/lightGreen</item>
    </style>
</resources>