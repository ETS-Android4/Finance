<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Finance" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryVariant">@color/darkRed</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">#CACACA</item>
        <item name="android:colorButtonNormal">@color/darkRed</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorTertiary">@color/darkGrey</item>
        <item name="android:textColorSecondary">@color/darkGrey</item>
        <item name="android:textColorHint">@color/darkRed</item>
        <item name="android:editTextColor">#047840</item>
    </style>
</resources>